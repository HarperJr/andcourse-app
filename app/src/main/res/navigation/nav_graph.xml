<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/signinFragment"
        android:name="com.conceptic.andcourse.presentation.auth.signin.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signinFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signinFragment_to_questionnaireBeginFragment"
            app:destination="@id/introduceFragment" />
    </fragment>

    <fragment
        android:id="@+id/introFragment"
        android:name="com.conceptic.andcourse.presentation.intro.IntroFragment"
        android:label="IntroFragment">
        <action
            android:id="@+id/action_introFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.conceptic.andcourse.presentation.auth.signup.SignUpFragment"
        android:label="SignUpFragment" />
    <fragment
        android:id="@+id/introduceFragment"
        android:name="com.conceptic.andcourse.presentation.questionnaire.QuestionnaireBeginFragment"
        android:label="IntroduceFragment" >
        <action
            android:id="@+id/action_questionnaireBeginFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.conceptic.andcourse.presentation.questionnaire.QuestionFragment"
        android:label="QuestionFragment" />
</navigation>